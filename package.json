  },
  "dependencies": {
    "@hotwired/turbo-rails": "^7.3.0",
    "tailwindcss-filters": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "esbuild": "^0.19.12"
  }
}
