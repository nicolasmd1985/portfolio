<% content_for :title, t('home.meta.title') %>
<% content_for :description, t('home.meta.description') %>

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background with overlay -->
  <div 
    class="absolute inset-0 bg-fixed bg-cover bg-center"
    style="background-image: url(<%= asset_path 'smart_house.jpg' %>); filter: blur(2px); transform: scale(1.1);"
  ></div>
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70"></div>

  <!-- Content container -->
  <div class="relative z-10 text-center px-4 w-full max-w-[1400px] mx-auto pt-32">
    <!-- Main title -->
    <h1 class="main-title font-extrabold orbitron-font">
      Nicolas Mahecha
    </h1>

    <!-- Tagline -->
    <p class="text-xl sm:text-2xl md:text-3xl text-white max-w-4xl mx-auto inter-font leading-relaxed mb-20 font-semibold tracking-wide" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);">
      <%= t('home.tagline') %>
    </p>

    <!-- Services Grid -->
    <div class="services-grid">
      <!-- Smart Device Integration -->
      <div class="service-item">
        <a href="/about" class="flex flex-col items-center hover:opacity-80 transition-opacity">
          <div class="icon-container mb-4">
            <i class="mdi mdi-home-automation icon-large"></i>
          </div>
          <h2 class="service-title"><%= t('home.services.smart_device') %></h2>
        </a>
      </div>

      <!-- Sustainable Energy -->
      <div class="service-item">
        <a href="/about" class="flex flex-col items-center hover:opacity-80 transition-opacity">
          <div class="icon-container mb-4">
            <i class="mdi mdi-solar-power-variant icon-large"></i>
          </div>
          <h2 class="service-title"><%= t('home.services.sustainable_energy') %></h2>
        </a>
      </div>

      <!-- Software Development -->
      <div class="service-item">
        <a href="/about" class="flex flex-col items-center hover:opacity-80 transition-opacity">
          <div class="icon-container mb-4">
            <i class="mdi mdi-code-braces icon-large"></i>
          </div>
          <h2 class="service-title"><%= t('home.services.software_development') %></h2>
        </a>
      </div>
    </div>

    <!-- CTA Button Container -->
    <div class="flex justify-center mt-20">
      <a href="#about" class="btn-primary">
        <%= t('home.cta') %>
      </a>
    </div>
  </div>
</section>

<section id="about" class="py-20 bg-gray-800 text-center">
  <div class="container mx-auto px-8 max-w-4xl">
    <h2 class="text-4xl font-bold mb-6 text-white"><%= t('home.about.title') %></h2>
    <p class="text-lg leading-relaxed text-gray-300">
      <%= t('home.about.description') %>
    </p>

    <div class="about-buttons">
      <a href="/about" class="btn-secondary"><%= t('home.about.buttons.about_me') %></a>
      <a href="/projects" class="btn-primary"><%= t('home.about.buttons.explore_projects') %></a>
      <a href="/contact" class="btn-secondary"><%= t('home.about.buttons.get_in_touch') %></a>
    </div>
  </div>
</section>
