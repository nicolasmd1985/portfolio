<%= turbo_frame_tag "contact_form" do %>
  <div class="bg-green-500/10 border border-green-500 rounded-lg p-6 text-center">
    <i class="mdi mdi-check-circle text-4xl text-green-500 mb-4"></i>
    <h3 class="text-xl font-semibold text-white mb-2"><%= t('contact.success.title') %></h3>
    <p class="text-gray-300 mb-4"><%= t('contact.success.body') %></p>
    <%= link_to t('contact.success.another'), contact_path, 
        class: "inline-block bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition-colors",
        data: { turbo_frame: "contact_form" } %>
  </div>
<% end %> 